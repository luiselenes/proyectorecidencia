        android:theme="@style/Theme.AppAlmacen.NoActionBar">
        <activity android:name=".MostrarTodosProductosActivity"></activity>
        <activity android:name=".ProductDetailActivity" />
        <activity android:name=".activityAlmacenista" />
        <activity android:name=".passwordActivity" />
        <activity android:name=".loginActivity" />
